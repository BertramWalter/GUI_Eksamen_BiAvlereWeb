@model IEnumerable<GUI_Eksamen_BiAvlereWeb.Models.VarroaCount>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="VarroaCounts" asp-action="Index">
    <p>
        Bee hive: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BeeHive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateForCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDaysObserved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BeeHive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateForCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDaysObserved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </th>
            <td>
                <a asp-action="Details" asp-route-id="@item.VarroaCountId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
